<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Converters="clr-namespace:Valyreon.Elib.Wpf.Converters">
    <Converters:ColorBrightnessConverter x:Key="ColorConverter" />
    <SolidColorBrush x:Key="AccentColorBrush" Color="#6495ED" />
    <SolidColorBrush x:Key="AccentColorVeryLightBrush" Color="{Binding Source={StaticResource AccentColorBrush}, Path=Color, Converter={StaticResource ColorConverter}, ConverterParameter=0.9}" />
    <!--  #e8effc  -->
    <SolidColorBrush x:Key="BackgroundColorBrush" Color="#222222" />
    <SolidColorBrush x:Key="LighterBackgroundColorBrush" Color="#2f2f2f" />
    <SolidColorBrush x:Key="TabItemPanelBackgroundBrush" Color="#222222" />
    <SolidColorBrush x:Key="DefaultDarkFont" Color="#484b4e" />
    <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="{StaticResource AccentColorBrush}" />
    <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}" Color="White" />
    <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightBrushKey}" Color="#666" />
    <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightTextBrushKey}" Color="White" />
</ResourceDictionary>
