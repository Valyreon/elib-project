<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="AccentColorBrush" Color="#446cb3" />
    <SolidColorBrush x:Key="BackgroundColorBrush" Color="#222222" />
    <SolidColorBrush x:Key="LighterBackgroundColorBrush" Color="#373737" />
    <SolidColorBrush x:Key="TabItemPanelBackgroundBrush" Color="#222222" />
    <SolidColorBrush x:Key="DefaultDarkFont" Color="#484b4e" />

    <Style
        x:Key="CleanCloseWindowButtonStyle"
        BasedOn="{StaticResource MetroWindowButtonStyle}"
        TargetType="{x:Type Button}">
        <Style.Triggers>

            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource AccentColorBrush}" />
                <Setter Property="Foreground" Value="Black" />
            </Trigger>
            <Trigger Property="IsMouseOver" Value="False">
                <Setter Property="Foreground" Value="{StaticResource AccentColorBrush}" />
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="White" />
            </Trigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>