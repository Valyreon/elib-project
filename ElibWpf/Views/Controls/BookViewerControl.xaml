<UserControl
    x:Class="ElibWpf.Views.Controls.BookViewerControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Converters="clr-namespace:ElibWpf.Converters"
    xmlns:MetroControls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:custompanels="clr-namespace:ElibWpf.Components"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ElibWpf.Views.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <Style x:Key="LargeTileStyle" TargetType="MetroControls:Tile">
                <Setter Property="Width" Value="150" />
                <Setter Property="Height" Value="225" />
                <Setter Property="TitleFontSize" Value="14" />
            </Style>
            <Converters:AuthorsToStringConverter x:Key="AuthorsToStringConverter" />
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="80" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Border Grid.Row="0" Background="White">
                <StackPanel Orientation="Horizontal">
                    <TextBlock
                        Margin="16,0,0,10"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        FontSize="28"
                        Foreground="#484b4e"
                        Text="{Binding Caption}" />
                    <Label
                        Margin="5,0,0,0"
                        VerticalAlignment="Center"
                        FontSize="18"
                        FontStyle="Italic"
                        Foreground="#484b4e">
                        <Grid>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock x:Name="CurrentMovies" Visibility="Collapsed" />
                                <TextBlock Margin="5,0,0,0" Text="{Binding CurrentNumberOfBooks, Mode=OneWay}" />
                                <TextBlock Margin="5,0,0,0" Text=" books" />
                            </StackPanel>
                        </Grid>
                    </Label>
                    <MetroControls:MetroProgressBar
                        Width="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=Grid}, Path=ActualWidth, Mode=OneWay}"
                        Margin="10,10,0,10"
                        EllipseDiameter="5"
                        Foreground="{StaticResource AccentColorBrush}"
                        IsIndeterminate="True"
                        Maximum="100"
                        Minimum="0" />
                </StackPanel>
            </Border>
            <ItemsControl
                Grid.Row="1"
                Margin="15,0,15,0"
                VerticalAlignment="Top"
                ItemsSource="{Binding Books, Mode=OneTime, IsAsync=True}"
                ScrollViewer.CanContentScroll="True"
                VirtualizingStackPanel.IsVirtualizing="True"
                VirtualizingStackPanel.VirtualizationMode="Recycling">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel
                            Margin="15,15,15,15"
                            HorizontalAlignment="Left"
                            Orientation="Vertical"
                            RenderOptions.BitmapScalingMode="HighQuality"
                            RenderOptions.ClearTypeHint="Enabled"
                            TextOptions.TextRenderingMode="ClearType">
                            <StackPanel.Style>
                                <Style TargetType="StackPanel">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Cursor" Value="Hand" />
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </StackPanel.Style>
                            <MetroControls:Tile
                                Margin="0,0,0,5"
                                Background="#FF2F2F2F"
                                CommandParameter="{Binding Mode=OneTime}"
                                Style="{StaticResource LargeTileStyle}">
                                <MetroControls:Tile.Triggers>
                                    <EventTrigger RoutedEvent="MetroControls:Tile.MouseEnter">
                                        <EventTrigger.Actions />
                                    </EventTrigger>
                                    <EventTrigger RoutedEvent="MetroControls:Tile.MouseLeave">
                                        <EventTrigger.Actions />
                                    </EventTrigger>
                                </MetroControls:Tile.Triggers>
                                <Grid>
                                    <Image
                                        x:Name="BackgroundImage"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Source="{Binding Cover}" />
                                </Grid>
                            </MetroControls:Tile>
                            <TextBlock
                                Name="Title"
                                Width="150"
                                HorizontalAlignment="Left"
                                FontSize="14"
                                Text="{Binding Name}"
                                TextOptions.TextHintingMode="Fixed"
                                TextTrimming="CharacterEllipsis" />
                            <TextBlock
                                Width="150"
                                HorizontalAlignment="Left"
                                FontSize="12"
                                Foreground="Gray"
                                Text="{Binding Authors, Converter={StaticResource AuthorsToStringConverter}}"
                                TextOptions.TextHintingMode="Fixed" />
                            <TextBlock
                                Width="150"
                                HorizontalAlignment="Left"
                                FontSize="12"
                                Foreground="Gray"
                                Text="{Binding SeriesInfo}"
                                TextOptions.TextHintingMode="Fixed" />
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
                <ItemsControl.Template>
                    <ControlTemplate>
                        <Border
                            Padding="{TemplateBinding Control.Padding}"
                            Background="{TemplateBinding Panel.Background}"
                            BorderBrush="{TemplateBinding Border.BorderBrush}"
                            BorderThickness="{TemplateBinding Border.BorderThickness}"
                            SnapsToDevicePixels="True">
                            <ScrollViewer
                                x:Name="MovieScrollViewer"
                                Padding="{TemplateBinding Control.Padding}"
                                FocusVisualStyle="{x:Null}"
                                Focusable="True"
                                VerticalScrollBarVisibility="Auto">
                                <ItemsPresenter SnapsToDevicePixels="{TemplateBinding UIElement.SnapsToDevicePixels}" />
                            </ScrollViewer>
                        </Border>
                    </ControlTemplate>
                </ItemsControl.Template>
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
        </Grid>
    </Grid>
</UserControl>
