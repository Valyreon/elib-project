<UserControl
    x:Class="ElibWpf.Views.Controls.BookViewerControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:AttachedProperties="clr-namespace:ElibWpf.AttachedProperties"
    xmlns:Components="clr-namespace:ElibWpf.CustomComponents"
    xmlns:Converters="clr-namespace:ElibWpf.Converters"
    xmlns:MetroControls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fa="http://schemas.fontawesome.io/icons/"
    xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
    xmlns:local="clr-namespace:ElibWpf.Views.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadMoreCommand}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <UserControl.Resources>
        <ResourceDictionary>
            <Style x:Key="LargeTileStyle" TargetType="MetroControls:Tile">
                <Setter Property="TitleFontSize" Value="14" />
                <Setter Property="Width" Value="164" />
                <Setter Property="Height" Value="262" />
            </Style>
            <Converters:AuthorsToStringConverter x:Key="AuthorsToStringConverter" />
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="60" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Border
                Grid.Row="0"
                Panel.ZIndex="20"
                Background="GhostWhite"
                BorderThickness="0">
                <Border.Effect>
                    <DropShadowEffect
                        BlurRadius="5"
                        Direction="270"
                        Opacity="0.3" />
                </Border.Effect>
                <Grid VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="20" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="10" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="10" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        FontSize="24"
                        Foreground="#484b4e"
                        Text="{Binding Caption}" />
                    <TextBlock
                        Grid.Column="3"
                        Margin="0,7,0,0"
                        VerticalAlignment="Center"
                        FontSize="14"
                        FontStyle="Italic"
                        Foreground="#484b4e">
                        <Grid>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Margin="0,0,0,0" Text="{Binding NumberOfBooks, Mode=OneWay}" />
                                <TextBlock Margin="0,0,0,0" Text=" books" />
                            </StackPanel>
                        </Grid>
                    </TextBlock>

                    <Components:SymbolButton
                        Grid.Column="5"
                        Width="30"
                        Height="30"
                        Command="{Binding RefreshCommand}"
                        Foreground="#484b4e"
                        IconName="Refresh"
                        IconSize="16" />

                    <Image Grid.Column="7" Width="368">
                        <Image.Source>
                            <BitmapImage DecodePixelWidth="368" UriSource="/Images/searchBackgorund.png" />
                        </Image.Source>
                    </Image>
                    <Grid Grid.Column="7" HorizontalAlignment="Right">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="20" />
                            <ColumnDefinition Width="240" />
                            <ColumnDefinition Width="5" />
                            <ColumnDefinition Width="30" />
                            <ColumnDefinition Width="15" />
                        </Grid.ColumnDefinitions>

                        <Components:TextBoxWithSymbol
                            Grid.Column="1"
                            Width="230"
                            Height="30"
                            IconName="Search"
                            WatermarkText="Search..." />

                        <Components:SymbolButton
                            Grid.Column="3"
                            Width="30"
                            Height="30"
                            Foreground="GhostWhite"
                            IconName="Gear"
                            IconSize="24" />
                    </Grid>
                </Grid>
            </Border>
            <ItemsControl
                Grid.Row="1"
                Margin="15,0,15,0"
                Padding="0,5,0,0"
                VerticalAlignment="Top"
                ItemsSource="{Binding Books, Mode=OneTime, IsAsync=True}"
                ScrollViewer.CanContentScroll="True"
                VirtualizingStackPanel.IsVirtualizing="True"
                VirtualizingStackPanel.VirtualizationMode="Recycling">
                <ItemsControl.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Menu item 1" />
                        <MenuItem Header="Menu item 2" />
                        <Separator />
                        <MenuItem Header="Menu item 3" />
                    </ContextMenu>
                </ItemsControl.ContextMenu>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Components:BookTile
                            Title="{Binding Title}"
                            Authors="{Binding Authors, Converter={StaticResource AuthorsToStringConverter}}"
                            Cover="{Binding Cover}"
                            SeriesInfo="{Binding SeriesInfo}" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
                <ItemsControl.Template>
                    <ControlTemplate>
                        <Border
                            Padding="{TemplateBinding Control.Padding}"
                            Background="{TemplateBinding Panel.Background}"
                            BorderBrush="{TemplateBinding Border.BorderBrush}"
                            BorderThickness="{TemplateBinding Border.BorderThickness}"
                            SnapsToDevicePixels="True">
                            <ScrollViewer
                                x:Name="MovieScrollViewer"
                                Padding="{TemplateBinding Control.Padding}"
                                AttachedProperties:ScrollViewerExtensions.ScrollToBottom="{Binding LoadMoreCommand}"
                                AttachedProperties:ScrollViewerExtensions.VerticalOffset="{Binding ScrollVertical}"
                                FocusVisualStyle="{x:Null}"
                                Focusable="False"
                                VerticalScrollBarVisibility="Auto">
                                <ItemsPresenter SnapsToDevicePixels="{TemplateBinding UIElement.SnapsToDevicePixels}" />
                            </ScrollViewer>
                        </Border>
                    </ControlTemplate>
                </ItemsControl.Template>
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
        </Grid>
    </Grid>
</UserControl>
